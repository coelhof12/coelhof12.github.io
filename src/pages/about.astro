---
import Base from "../layouts/Base.astro";
---
<Base title="About — Francisco Coelho" description="About Francisco Coelho and his journey.">
  <div class="about-container">
    <section class="about-intro">
      <h1>About Me</h1>
      <p>
        Hello! I'm Francisco Coelho, a creative and driven Full-Stack Developer with expertise in building efficient, scalable web applications. My journey began in design, which informs my UX and UI approach.
      </p>
    </section>

    <section class="about-skills">
      <h2>Skills Overview</h2>
      <div class="skills-grid">
        <div class="skill-item">HTML</div>
        <div class="skill-item">CSS</div>
        <div class="skill-item">JavaScript</div>
        <div class="skill-item">MySQL</div>
        <div class="skill-item">Java</div>
      </div>
    </section>

    <section class="about-timeline">
      <h2>My Journey</h2>
      <div class="timeline">
        <div class="timeline-item">
          <h3>2024</h3>
          <p><strong>Completed 32-Week Full-Stack Coding Bootcamp</strong> at Code for All</p>
        </div>
        <div class="timeline-item">
          <h3>2017</h3>
          <p><strong>Degree in Design (Half Completed)</strong> at University of Aveiro</p>
        </div>
        <div class="timeline-item">
          <h3>June 2023 – Present</h3>
          <p><strong>Digital Communication Director</strong> at Cértoma - Indústria Funerária</p>
        </div>
      </div>
    </section>
  </div>
</Base>

